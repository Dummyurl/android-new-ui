<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.firsttimesactivities.JoinActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/bytes"/>

    <EditText
        android:id="@+id/enter_your_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Please enter your email here"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/go_to_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/enter_your_email"
        android:src="@drawable/ic_go_to" />

</RelativeLayout>